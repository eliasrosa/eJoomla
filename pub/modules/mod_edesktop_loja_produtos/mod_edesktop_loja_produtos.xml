<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
    <name>eDesktop >> Loja >> Produtos</name>
    <author>Elias da Rosa</author>
    <version>1.0</version>
    <description>Exibe um ou mais produtos de uma categoria</description>
    <files>
        <filename>index.html</filename>
    </files>
    <params>
		<param name="mod_titulo" type="text" default="Lançamentos" label="Título" description="" />
		<param name="mod_id" type="text" default="" label="Atributo ID" description="" />
		<param name="mod_itemid" type="text" default="" label="Itemid" description="" />
		<param name="mod_categoriaID" type="text" default="" label="ID da categoria" description="" />
		<param name="mod_limit" type="text" default="2" label="Quantidade max. de produtos" description="" />
    </params>
</install>